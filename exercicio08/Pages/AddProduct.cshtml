@page
@model exercicio08.Pages.AddProductModel
@{
	ViewData["Title"] = "Cadastrar Produto";
}

<div class="container mt-4">
    <h1 class="mb-3">Cadastrar Produto</h1>
    <h2 class="mb-5">Exercício 10</h2>



    <form method="post" class="p-3 border rounded">
        <div class="mb-3">
            <label class="form-label">Nome</label>
            <input type="text" class="form-control" asp-for="name" required>
        </div>

        <div class="mb-3">
            <label class="form-label">Preço</label>
            <input type="number" step="0.01" class="form-control" asp-for="price" required>
        </div>

        <button type="submit" class="btn btn-primary">Salvar</button>
    </form>

    @if (!string.IsNullOrEmpty(Model.Message))
    {
        <div class="mt-3 p-2 text-success">
            @Model.Message
        </div>
    }
</div>
